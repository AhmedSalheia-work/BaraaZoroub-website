<?php


namespace BARAA\Controllers;


use BARAA\Lib\Database\DatabaseHandler;

class Dbcontroller extends AbstractController
{
    public function defaultAction(){
        DatabaseHandler::factory()->exec('
            CREATE TABLE imgs(
                id INT PRIMARY KEY AUTO_INCREMENT,
                img VARCHAR(30) NOT NULL UNIQUE
            )
        ');

        DatabaseHandler::factory()->exec('
            CREATE TABLE projects(
                id INT PRIMARY KEY AUTO_INCREMENT,
                client VARCHAR(30) NOT NULL,
                head_img INT NOT NULL,
                FOREIGN KEY (head_img) REFERENCES imgs(id)
            )
        ');

        DatabaseHandler::factory()->exec('
            CREATE TABLE proj_img(
                id INT PRIMARY KEY AUTO_INCREMENT,
                prodId INT NOT NULL,
                imgId INT NOT NULL,
                FOREIGN KEY (prodId) REFERENCES projects(id),
                FOREIGN KEY (imgId) REFERENCES imgs(id)
            )
        ');

        DatabaseHandler::factory()->exec('
            CREATE TABLE about_imgs(
                id INT PRIMARY KEY AUTO_INCREMENT,
                imgId INT NOT NULL,
                title VARCHAR(30) NOT NULL,
                FOREIGN KEY (imgId) REFERENCES imgs(id)
            )
        ');

        DatabaseHandler::factory()->exec('
            CREATE TABLE clients(
                id INT PRIMARY KEY AUTO_INCREMENT,
                imgId INT NOT NULL,
                title VARCHAR(50) UNIQUE,
                FOREIGN KEY (imgId) REFERENCES imgs(id)
            )
        ');

        DatabaseHandler::factory()->exec('
            CREATE TABLE projects_en(
                projId INT PRIMARY KEY,
                name VARCHAR(30) NOT NULL,
                type VARCHAR(50) NOT NULL,
                details TEXT NOT NULL,
                title VARCHAR(50) NOT NULL,
                FOREIGN KEY (projId) REFERENCES projects(id)
            );
        ');

        DatabaseHandler::factory()->exec('
            CREATE TABLE projects_ar(
                projId INT PRIMARY KEY,
                name VARCHAR(30) NOT NULL,
                type VARCHAR(50) NOT NULL,
                details TEXT NOT NULL,
                title VARCHAR(50) NOT NULL,
                FOREIGN KEY (projId) REFERENCES projects(id)
            );
        ');

        DatabaseHandler::factory()->exec('
            CREATE TABLE social_links(
                id VARCHAR(20) PRIMARY KEY,
                link VARCHAR(250) NOT NULL UNIQUE DEFAULT "https://"
            )
        ');

        DatabaseHandler::factory()->exec('
            INSERT INTO social_links VALUES("facebook","https://www.facebook.com/baraazorob"),("twitter","twitter"),("instagram","instagram"),("linkedin","linkedin-in"),("behance","behance"),("dribbble","dribbble"),("whatsapp","whatsapp"),("mail","envelope")
